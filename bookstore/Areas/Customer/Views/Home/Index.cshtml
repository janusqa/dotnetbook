@model List<Product>

<div class="row pb-3 mb-4">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-4 rounded">
                        @if (@product.ProductImages?.Count > 0)
                        {
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-entityId="@product.Id">
                                <img src="@product.ProductImages.First().ImageUrl" class="card-img-top rounded" />
                            </a>
                        }
                        else
                        {
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-entityId="@product.Id">
                                <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                            </a>
                        }
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <strong>@product.Author</strong></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">List Price: <span
                                        class="text-decoration-line-through">@product.Price.ToString("c")</span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">As low as:
                                    <span>@product.Price100.ToString("c")</span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details"
                                asp-route-entityId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>