@model List<Product>

@*
Since we may reuse this TempData in multiple pages, better to add
it to a partial view which is more maintainable.
This partial can then be added to any page as needed.
If many pages need it, just add it to the partial _Layout.html
*@
@*
@if (TempData["success"] != null)
{
<h2>@TempData["success"]</h2>
}
*@

<div class="card shadow border-0 mt4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Products</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Create"><i
                        class="bi bi-plus-circle"></i>
                    Create</a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr>
                        <td>@entity.Title</td>
                        <td>@entity.ISBN</td>
                        <td>@entity.Price</td>
                        <td>@entity.Author</td>
                        <td></td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-area="Admin" asp-controller="Product" asp-action="Edit"
                                    asp-route-entityId="@entity.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-danger mx-2" asp-area="Admin" asp-controller="Product" asp-action="Delete"
                                    asp-route-entityId="@entity.Id"><i class="bi bi-trash-fill"></i>
                                    Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>