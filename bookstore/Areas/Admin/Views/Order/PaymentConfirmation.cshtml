@model int

<div class="container row pt-4 mb-5">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successful!</h1>
        <p>Your Order Number is: @Model</p>
        <img src="/images/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <p>Your payment has been recieved!</p>
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-entityId="@Model"
            class="btn btn-primary">Back to Order Details</a>
    </div>
</div>