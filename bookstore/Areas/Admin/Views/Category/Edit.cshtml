@model Category

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="POST">
            <input type="hidden" asp-for="Id" />
            <div class="border p-3 mt-4">
                @*
                In addition to asp-validation-for for individual fields we also have
                asp-validation-summary for general validation messages.
                It will display all error messages generated in a bulleted list.
                Three flavors are available
                1. asp-validation-summary="All". Displays all error messages.
                2. asp-validation-summary="ModelOnly". Does not display property related validations. That any errors
                that have the key assigned for the ModelState
                3. asp-validation-summary="None". Displays no errors
                *@
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    @*
                    asp-for is what connects our html to our model fields
                    Note below we do not even have to specify text for label
                    It pulls it directly from the model annotations or the model field itelf if no annotation is present
                    *@
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-0"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @*
                    asp-for is what connects our html to our model fields
                    Note below we do not even have to specify text for label
                    It pulls it directly from the model annotations or the model field itelf if no annotation is present
                    *@
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-0"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3 p-1">
                        <button class="btn btn-primary form-control" type="submit">Update</button>
                    </div>
                    <div class="col-6 col-md-3 p-1">
                        <a class="btn btn-outline-secondary border form-control" asp-area="Admin"
                            asp-controller="Category" asp-action="Index">Categories</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@*
Add client-side validation in addition to the server-side validation above
Client-side valididation is implemented using jquery from the partial scripts files
in the shared views. The syntax below is generally for consuming a partial view.
*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}