@model Category

<form method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0">Name</label>
            <input class="form-control" type="text" />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0">Display Order</label>
            <input class="form-control" type="number" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3 p-1">
                <button class="btn btn-primary form-control" type="submit">Create</button>
            </div>
            <div class="col-6 col-md-3 p-1">
                <a class="btn btn-outline-secondary border form-control" asp-controller="Category"
                    asp-action="Index">Categoreis</a>
            </div>
        </div>
    </div>
</form>